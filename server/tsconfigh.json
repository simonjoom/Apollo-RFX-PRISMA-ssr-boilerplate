{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "esnext", "dom"
    ]
  },
  "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/*.spec.ts"
    ]
}
