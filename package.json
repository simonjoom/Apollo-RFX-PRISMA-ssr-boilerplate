{
  "name": "Apollo-RFX-PRISMA-ssr-boilerplate",
  "description": "materialui and ssr with responsive support with the magical couple webpack4-RFX-PRISMA",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "Simon <simon@skiscool.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=development ./babel-watch/babel-watch.js server/index.js",
    "start:prod": "npm run build && npm run serve ",
    "serve": "cross-env NODE_ENV=production node buildServer/index.js",
    "build": "npm run build:client && npm run build:server && npm run build:node",
    "build:client": "rimraf buildClient && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel server/index.js -o buildServer/index.js",
    "clean": "rimraf buildClient buildServer",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "dependencies": {
    "@material-ui/core": "^1.1.0",
    "apollo-boost": "^0.1.7",
    "apollo-cache-inmemory": "^1.2.2",
    "apollo-cache-redux": "latest",
    "apollo-cache-router": "^1.1.0",
    "apollo-client": "^2.3.2",
    "babel-loader": "^8.0.0-beta.3",
    "babel-plugin-universal-import": "latest",
    "basscss": "^8.0.4",
    "basscss-background-colors": "^2.1.0",
    "basscss-base-reset": "^2.0.3",
    "basscss-base-tables": "^1.0.2",
    "basscss-btn": "^1.1.1",
    "basscss-btn-outline": "^1.1.0",
    "basscss-btn-primary": "^1.1.0",
    "basscss-color-forms": "^3.0.2",
    "basscss-colors": "^2.2.0",
    "basscss-flexbox": "^1.0.2",
    "basscss-grid": "^2.0.0",
    "bcryptjs": "latest",
    "bluebird": "^3.5.1",
    "cache-loader": "latest",
    "chokidar": "latest",
    "classnames": "latest",
    "commander": "latest",
    "css-loader": "latest",
    "del": "latest",
    "fetch-everywhere": "latest",
    "file-loader": "^1.1.11",
    "graphql-tag": "latest",
    "graphql-yoga": "^1.14.6",
    "intl": "^1.2.5",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "path-to-regexp": "^2.2.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "latest",
    "postcss-preset-env": "latest",
    "postcss-scss": "^1.0.5",
    "postcss-url": "^7.3.2",
    "prisma-binding": "latest",
    "react": "latest",
    "react-apollo": "latest",
    "react-dom": "latest",
    "react-intl": "latest",
    "react-redux": "^5.0.7",
    "react-universal-component": "latest",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "reselect": "^3.0.1",
    "resolve-pathname": "^2.2.0",
    "sass-loader": "latest",
    "serve-favicon": "latest",
    "thread-loader": "latest",
    "url-loader": "^1.0.1",
    "webpack-flush-chunks": "latest",
    "webpack-merge": "latest"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.49",
    "@babel/plugin-proposal-export-default-from": "7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.49",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.49",
    "@babel/plugin-transform-react-constant-elements": "7.0.0-beta.49",
    "@babel/plugin-transform-runtime": "7.0.0-beta.49",
    "@babel/polyfill": "7.0.0-beta.49",
    "@babel/preset-env": "7.0.0-beta.49",
    "@babel/preset-flow": "7.0.0-beta.49",
    "@babel/preset-react": "7.0.0-beta.49",
    "@babel/register": "7.0.0-beta.49",
    "@babel/runtime": "7.0.0-beta.49",
    "commitizen": "^2.9.6",
    "cross-env": "latest",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.48.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.13.2",
    "react-hot-loader": "latest",
    "rimraf": "^2.6.1",
    "stats-webpack-plugin": "latest",
    "svgr": "^1.10.0",
    "travis-github-status": "^1.4.0",
    "webpack": "^4.10.2",
    "webpack-dev-middleware": "latest",
    "webpack-hot-middleware": "latest",
    "webpack-hot-server-middleware": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --single-quote --semi=false --write",
        "eslint --fix",
        "git add"
      ]
    }
  }
}
